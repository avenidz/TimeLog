<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:orientation="vertical"
    tools:context=".fragment.SignupFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Fill-in all required fields"
        android:layout_margin="20dp"/>
    <EditText
        android:id="@+id/sign_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="20dp"
        android:hint="Username"
        android:textAlignment="center"
        android:textSize="12sp"
        android:padding="10dp"
        android:maxLength="10"
        android:background="@drawable/sign_up_edittext_border"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Remember your password"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        />
    <EditText
        android:id="@+id/sign_passA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:hint="Password"
        android:textAlignment="center"
        android:textSize="12sp"
        android:padding="10dp"
        android:maxLength="10"
        android:inputType="textPassword"
        android:background="@drawable/sign_up_edittext_border"
        />
    <EditText
        android:id="@+id/sign_passB"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:hint="Re-type Password"
        android:textAlignment="center"
        android:textSize="12sp"
        android:padding="10dp"
        android:maxLength="10"
        android:inputType="textPassword"
        android:background="@drawable/sign_up_edittext_border"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add email for security"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        />
    <EditText
        android:id="@+id/sign_email"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:hint="Email Address"
        android:textAlignment="center"
        android:textSize="12sp"
        android:padding="10dp"
        android:inputType="textEmailAddress"
        android:background="@drawable/sign_up_edittext_border"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_border"
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:text="Create Account"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:textAllCaps="false"
        />

</androidx.appcompat.widget.LinearLayoutCompat>